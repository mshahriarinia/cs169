%h2 Details about #{@movie.title}

%ul#Details
  %li 
    rating 
    = @movie.rating
  %li
    released on
    = @movie.release_date.strftime("%m %d, %Y")
    
%h3 Description
%p#description 
  = @movie.description

=link_to "Back to Movie List", movies_path

=link_to "Edit movie", edit_movie_path(@movie)
=button_to "Delete", movie_path(@movie), :method => :delete, :confirm => "Are you sure?"
